<UserControl x:Class="BasketGame.FallingItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image x:Name="ItemImage" Height="60"/>
        <Rectangle Fill="Red" Width="50" Height="50" x:Name="Dummy" Visibility="Hidden"/>
        <Image x:Name="Splat" Source="pack://application:,,,/Images/splat.png" Width="120" Height="120" Visibility="Hidden" Margin="0 -50 0 0"/>
        <Image x:Name="Poof" Source="pack://application:,,,/Images/poof.png" Width="100" Height="100" Visibility="Hidden" />
    </Grid>
</UserControl>
