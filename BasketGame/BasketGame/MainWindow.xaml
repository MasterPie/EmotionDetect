<Window x:Class="BasketGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BasketGame" 
        Title="MainWindow" Height="576" Width="1024" DataContext="{Binding ViewModel, Source={StaticResource loader}}">
    <Grid>
        <TextBlock Text="{Binding Score}" FontSize="32"/>
        <TextBlock Text="{Binding Emotion}" FontSize="32"/>
        <local:GameContainerControl />
    </Grid>
</Window>
